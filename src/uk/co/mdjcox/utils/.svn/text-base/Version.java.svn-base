package uk.co.mdjcox.utils;

public class Version {

    public static Version instance = new Version("0.9.8");

    private String version;
    private String build = "281";
    private String[] oldVersions = new String[] {
            "0.9.7",
            "0.9.6",
            "0.9.5",
            "0.9.4",
            "0.9.3",
            "0.9.2",
            "0.9.1",
            "0.9.0"
    };

    public Version(String version) {
        this.version = version;
    }

    public String toString() {
        return version;
    }

    public static String[] oldVersions() {
        return instance.oldVersions;
    }

    public static String version() {
        return instance.toString();
    }

    public static String build() {
        return instance.build;
    }

    public static String fileVersion() {
        return "v" + instance.toString().replace('.', '_');
    }

    public static void main(String[] args) {
        System.out.println(instance);
    }
}
